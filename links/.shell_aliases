alias fs-tests-legacy="cd /opt/formstack/web/ && vagrant ssh default -c 'cd /vagrant && ./lib/vendor/phpunit/phpunit/phpunit -c tests/phpunit.xml tests/legacy-unit'"
alias fs-vagrant-build="vagrant ssh default -c 'build-formstack.sh'"
